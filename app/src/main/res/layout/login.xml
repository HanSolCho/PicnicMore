<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/picnicback"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/picnicicon"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginLeft="50dp"
        app:srcCompat="@drawable/picnic2" />
    <LinearLayout
    android:id="@+id/idline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/picnicicon"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="아이디 :" />

        <EditText
            android:id="@+id/idtext"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:hint="아이디를 입력하세요" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pwline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idline"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="비밀번호 :" />

        <EditText
            android:id="@+id/passwordtext"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:inputType="textPassword"
            android:hint="비밀번호를 입력하세요" />
    </LinearLayout>

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwline"
        android:layout_centerHorizontal="true"
        android:text="login" />

    <TextView
        android:id="@+id/signupbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginbtn"
        android:layout_centerHorizontal="true"
        android:text="회원가입"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />




</RelativeLayout>